<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.riquart.damian.adedigato">
    <application android:allowBackup="true"
        android:label="@string/app_name"
        android:icon="@mipmap/ic_launcher"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <activity android:name="com.riquart.damian.adedigato.HomeActivity"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        
        <activity android:name="com.riquart.damian.adedigato.GameActivity"
            android:screenOrientation="portrait">
        </activity>

        <activity android:name="com.riquart.damian.adedigato.OptionsActivity"
            android:screenOrientation="portrait">
        </activity>

        <activity android:name="com.riquart.damian.adedigato.AboutActivity"
            android:screenOrientation="portrait">
        </activity>

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />

    </application>

</manifest>
